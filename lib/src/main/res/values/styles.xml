<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="progressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">15dp</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/layer_list_progress_bar</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="toolbar_back_title" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="toolbar_back_arrow">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_v_arrow_left</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:tint">@android:color/background_light</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>