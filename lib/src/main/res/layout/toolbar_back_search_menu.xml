<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/title_back_btn_action_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        style="@style/toolbar_back_arrow"
        android:id="@+id/actionbar_start"
        android:contentDescription="@string/back" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/actionbar_centre"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/actionbar_end"
        android:layout_toEndOf="@+id/actionbar_start"
        android:gravity="center"
        tools:hint="search for something"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/actionbar_end"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/toolbar_margin"
        android:scaleType="center"
        android:src="@drawable/ic_v_menu" />

</RelativeLayout>